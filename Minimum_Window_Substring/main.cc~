#include <iostream>
#include <string>

using namespace std;


class Solution {

public:

	string minWindow(string S, string T) {
		int expect[256] = {0};
		int appear[256] = {0};
		int sl = S.length(); 
		int tl = T.length();
		if(tl == 0)	return "";
		if(sl < tl) return "";

		for(int i = 0; i < tl; i++)
			expect[T[i]]++;	

		int min = sl + 1;
		int win_start = 0, win_end = 0, appear_size = 0, pos = 0;
		
		for(; pos < sl; pos++){
			if(expect[S[pos]] > 0){
				appear[S[pos]]++ ;
				if(appear[S[pos]] <= expect[S[pos]])
					appear_size++;
			}	
			if(appear_size == tl){
				while(expect[S[win_start]] < appear[S[win_start]] 
						|| expect[S[win_start]] == 0){
					if(expect[S[win_start]])
						appear[S[win_start]]--;
					win_start++;	
				}
				if(min > pos - win_start){
					min = pos - win_start;
					win_end = pos;
				}
			}
		}
		if(min  == sl + 1)	return "";
		return S.substr(win_start, win_end - win_start + 1);
    }

};

int main(int argc, char** argv)
{
	Solution sl;
	string S("cabwefgewcwaefgcf"), T("ABC");
    string ret = sl.minWindow(S, T);
	
	cout<<"Result  :("<<ret<<")"<<endl;

	return 0;

}
