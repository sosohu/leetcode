#include <iostream>
#include <string>
#include <vector>

using namespace std;


class Solution {

public:

	int recursion(int A[], int n, int pos){
		if(pos >= n - 1)	return 0;
		if(A[pos] >= n - 1 - pos)	return 1;
	
		int min = n;
		int tmp;
		for(int i = A[pos]; i >= 1; i--){
			tmp = recursion(A, n, pos + i);
			if(min > tmp)
				min = tmp;
		}	
		return min + 1;
	}

	int jump(int A[], int n) {
		return recursion(A, n, 0);
    }

};

int main(int argc, char** argv)
{
	Solution sl;
	int A[] = {4,3,0,1,2,1};
	int ret = sl.jump(A, 6);
	
	cout<<"Result  :("<<ret<<")"<<endl;

	return 0;

}
